    /// Current stage in the sequence
    stage: enum {
        pre_init,
        spINIT,
        spinUP,
        spun,
        complete,
    },
    /// Quantum coherence level
    coherence: f32,
    /// Crystal resonance measure
    resonance: f32,
    /// Reality anchor status
